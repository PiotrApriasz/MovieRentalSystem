                Content="Check Delays" HorizontalAlignment="Center" Margin="0,390,0,0"
                VerticalAlignment="Top" Height="35" Width="176"
                FontSize="17" FontFamily="Century Gothic" Click="CheckDelaysButton_Click"/>
