      xmlns:local="clr-namespace:MovieRentalSystemWPF.Procedures"
      mc:Ignorable="d" 
      d:DesignHeight="543" d:DesignWidth="716"
      Title="CheckDelaysPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,147,0,0" Text="Number of users who didn't return the movie"
