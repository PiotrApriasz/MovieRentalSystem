        <TextBlock Name="NumberBlock" TextWrapping="Wrap" VerticalAlignment="Top"
                   FontSize="42" FontFamily="Century Gothic" Margin="-10,237,10,0" 
                   Text="" HorizontalAlignment="Center"/>
